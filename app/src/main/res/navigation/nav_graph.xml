<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.shapes.app.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_drawing"
            app:destination="@id/drawingFragment" />
    </fragment>

    <fragment
        android:id="@+id/drawingFragment"
        android:name="com.shapes.app.DrawingFragment"
        android:label="Draw a Shape">
        <action
            android:id="@+id/action_drawing_to_feedback"
            app:destination="@id/feedbackFragment" />
    </fragment>

    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.shapes.app.FeedbackFragment"
        android:label="Great Job!">
        <argument
            android:name="shape"
            app:argType="string"
            android:defaultValue="Unknown" />
        <argument
            android:name="confidence"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_feedback_to_drawing"
            app:destination="@id/drawingFragment"
            app:popUpTo="@id/drawingFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
