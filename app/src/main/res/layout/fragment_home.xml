<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/home_gradient"
    android:padding="20dp"
    tools:context=".HomeFragment">

    <!-- Logo with proper sizing -->
    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shapes_logo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </FrameLayout>

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHAPES FUN"
        android:textSize="48sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="12dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn and Play with Shapes"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/teal_700"
        android:layout_marginBottom="60dp" />

    <!-- Features List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:background="@drawable/feature_card"
        android:padding="20dp">

        <!-- Feature 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draw Shapes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginRight="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Draw circles, squares and triangles"
                android:textSize="12sp"
                android:textColor="@color/teal_700" />
        </LinearLayout>

        <!-- Feature 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Games"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginRight="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 fun mini-games to play"
                android:textSize="12sp"
                android:textColor="@color/teal_700" />
        </LinearLayout>

        <!-- Feature 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earn Stars"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginRight="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Collect stars and score points"
                android:textSize="12sp"
                android:textColor="@color/teal_700" />
        </LinearLayout>
    </LinearLayout>

    <!-- Start Button -->
    <Button
        android:id="@+id/startGameButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="START GAME"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/teal_700" />

</LinearLayout>
