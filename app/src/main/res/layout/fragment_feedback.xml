<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".FeedbackFragment">

        <!-- Premium Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/premium_header"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ EXCELLENT!"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/confidenceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You drew: Circle (85%)"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>

        <!-- Score Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="12dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/card_circle"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCORE"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/card_circle"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STARS"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­ 0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/card_circle"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCURACY"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/accuracyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700" />
            </LinearLayout>
        </LinearLayout>

        <!-- GAME TABS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® Choose a Game"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="16dp" />

        <!-- GAME 1: Shape Matching -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/game_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:spacing="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="32sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GAME 1: Shape Matcher"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose the correct shape"
                            android:textSize="12sp"
                            android:textColor="@color/teal_700" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:spacing="8dp"
                    android:id="@+id/game1Container"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/option1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="â­• CIRCLE"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/teal_700" />

                    <Button
                        android:id="@+id/option2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="ðŸ”· SQUARE"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/purple_700" />

                    <Button
                        android:id="@+id/option3"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="ðŸ”º TRIANGLE"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/teal_700" />

                    <TextView
                        android:id="@+id/miniGameResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/purple_700" />
                </LinearLayout>

                <Button
                    android:id="@+id/playGame1Btn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="â–¶ï¸ PLAY"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>

        <!-- GAME 2: Speed Quiz -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/game_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:spacing="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡"
                        android:textSize="32sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GAME 2: Speed Quiz"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Answer in 5 seconds!"
                            android:textSize="12sp"
                            android:textColor="@color/teal_700" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/playGame2Btn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="â–¶ï¸ PLAY"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/purple_700"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>

        <!-- GAME 3: Counting Game -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/game_card"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:spacing="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¢"
                        android:textSize="32sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GAME 3: Shape Counter"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Count the shapes!"
                            android:textSize="12sp"
                            android:textColor="@color/teal_700" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/playGame3Btn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="â–¶ï¸ PLAY"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="12dp">

            <Button
                android:id="@+id/tryAgainButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ðŸ”„ Draw Again"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/teal_700" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="âž¡ï¸ Next"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_700" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
