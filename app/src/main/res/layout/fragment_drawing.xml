<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".DrawingFragment">

    <!-- Header with title and score -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœï¸ Draw a Shape"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â­ Score: 0  |  Stars: 0"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/teal_700"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Drawing Canvas with shadow -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp">

        <com.shapes.app.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/canvas_background"
            android:elevation="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘† Draw here"
            android:textSize="16sp"
            android:textColor="@color/teal_200"
            android:layout_gravity="center"
            android:alpha="0.3" />
    </FrameLayout>

    <!-- Buttons with gradient style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:spacing="12dp">

        <Button
            android:id="@+id/clearButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="ðŸ—‘ï¸ Clear"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_700"
            android:layout_marginEnd="8dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/recognizeButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="ðŸŽ¯ Recognize"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_700"
            android:layout_marginStart="8dp"
            android:elevation="4dp" />

    </LinearLayout>

</LinearLayout>
